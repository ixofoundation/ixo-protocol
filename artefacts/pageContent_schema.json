{
  "$id": "root",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "page": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Decentralised Identifier of the entity for which the PageContent will be made",
          "format": "DID",
          "examples": ["did:ixo:CYCc2xaJKrp8Yt947Nc6jdff"]
        },
        "@type": {
          "type": "string",
          "default": "ixo:page",
          "description": "The type of entity attribute. As defined in the ixo Context library."
        },
        "page": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Each of the page content ID which is generated by editorjs (random hash value)",
                "examples": ["z3rRA9MDzL"]
              },
              "type": {
                "type": "string",
                "description": "Content types supported by editorjs",
                "examples": [
                  "paragraph",
                  "table",
                  "image",
                  "list",
                  "warning",
                  "code",
                  "rawHTML",
                  "header",
                  "quote",
                  "checklist",
                  "delimitter"
                ]
              },
              "data": {
                "type": "object",
                "description": "Content data",
                "examples": [{ "text": "Hello World!" }]
              }
            },
            "required": ["id", "type", "data"],
            "additionalProperties": false
          }
        }
      },
      "required": ["id", "@type", "page"],
      "additionalItems": false
    }
  },
  "required": ["page"],
  "additionalProperties": false
}
