{
  "$id": "root",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "page": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Decentralised Identifier of the entity for which the PageContent will be made",
          "format": "uri",
          "examples": ["did:ixo:entity:CYCc2xaJKrp8Yt947Nc6jdff"]
        },
        "@type": {
          "type": "string",
          "default": "ixo:page",
          "description": "The type of entity attribute. As defined in the ixo Context library."
        },
        "page": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Each of the page content ID which is generated by editorjs (random hash value)",
                "examples": ["z3rRA9MDzL"]
              },
              "type": {
                "type": "string",
                "description": "Content types supported by editorjs",
                "examples": [
                  "paragraph",
                  "table",
                  "image",
                  "list",
                  "warning",
                  "code",
                  "rawHTML",
                  "header",
                  "quote",
                  "checklist",
                  "delimitter"
                ]
              },
              "data": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "description": "the content identifier (cid) of the resource",
                    "examples": ["did:ixo:entity:fwefw0wu5cv3r..."]
                  },
                  "description": {
                    "type": "string",
                    "examples": ["IoT Events Data"]
                  },
                  "mediaType": {
                    "type": "string",
                    "examples": ["jsonld"]
                  },
                  "endpoint": {
                    "type": "string",
                    "examples": ["#cellnode/fwefw0wu5cv3r"]
                  },
                  "proof": {
                    "type": "string",
                    "description": "matches the cid in this instance, as the content hash serves as a proof",
                    "examples": ["fwefw0wu5cv3r"]
                  },
                  "encrypted": {
                    "type": "boolean",
                    "examples": ["false"]
                  }
                },
                "required": [
                  "id",
                  "description",
                  "mediaType",
                  "endpoint",
                  "proof",
                  "encrypted"
                ],
                "additionalProperties": false
              }
            },
            "required": ["id", "type", "data"],
            "additionalProperties": false
          }
        }
      },
      "required": ["id", "@type", "page"],
      "additionalItems": false
    }
  },
  "required": ["page"],
  "additionalProperties": false
}
